<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_city"
            android:layout_centerInParent="true"
            android:textColor="@color/lightgrey"
            android:text="电费催收"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/nav_sort_btn"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/nav_search_btn"
            android:layout_height="40dp"
            android:background="@drawable/ic_sort_white_24dp"/>

        <Button
            android:id="@+id/nav_search_btn"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:background="@drawable/ic_search_white_24dp"/>

        <EditText
            android:id="@+id/search_edittext"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:width="30dp"
            android:textColor="@color/lightgrey"
            android:layout_toRightOf="@+id/nav_menu_button"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/nav_menu_button"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="40dp"
            android:background="@drawable/ic_menu_white_24dp"/>
    </RelativeLayout>
</RelativeLayout>